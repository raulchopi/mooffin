%html
%body{ 'ng-app' => 'instantIngredientsSearch' }

= render :partial => 'layouts/shared/header'

#content.row{ 'ng-controller' => 'InstantIngredientsSearchController' }
	#buscador.large-4.columns
		#datos_usuario
			.foto
				= image_tag current_user.avatar.path
			.nombre
				= current_user.name
			.num_recetas
				Recetas registradas: #{current_user.recipes.count} 
			.val_recetas
				ValoraciÃ³n recetas: #{current_user.average_rate_recipes}
		
	#main.large-8.columns
		%span{'ng-class'=>"{active: layout == 'grid'}", 'ng-click'=>"layout = 'grid'"} grid
		%span{'ng-class'=>"{active: layout == 'list'}", 'ng-click'=>"layout = 'list'"} list
					
		= render @recipes

= render :partial => 'layouts/shared/footer'