%header
	/ %a{ :href => "#", :id => 'logo' }= 'Moffin'
	#logo
		= link_to image_tag( 'logo.png'), root_path
	#login
		- if current_user
			= link_to 'Logout', logout_path
		- else
			#login_nav				
				%ul
					%li 
						= link_to 'Registro', signup_path, class: 'btn_login'
					%li	
						%a{ :class => 'btn_login'}= 'Login'
			#login_form
				= form_for :sessions, :url => sessions_path, :html => {:class => 'form_login'} do |f|
					= f.text_field :username, :class => 'login_text'
					= f.password_field :password, :class => 'login_text'
					= f.submit 'Login', :class => 'login_btn'


				%a{ :class => 'btn_close_login'}= 'x'

			= render :partial => 'layouts/shared/flash_message'


