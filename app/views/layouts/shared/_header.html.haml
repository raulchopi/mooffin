#header.big.contain-to-grid.sticky
	.row
		#logo
			= link_to image_tag( 'logos/mooffin2_blanco.png'), root_path

		#menu_movil
			%a.ion-navicon{}

		#login
			- if current_user
				#logout
					= link_to image_tag(current_user.avatar.url), user_path(current_user)
					= link_to current_user.name, user_path(current_user)
					%a#salir.ion-power{:href => logout_path}
			- else
				#login_box
					%span.login_text Entra con:
					%a.google.ion-social-googleplus{:href => '/auth/google_oauth2'}
					%a.facebook.ion-social-facebook{:href => '/auth/facebook'}
					%a.twitter.ion-social-twitter{:href => '/auth/twitter'}

				= render :partial => 'layouts/shared/flash_message'

		%nav.top-bar-section{:id =>'menu_principal'}
			%ul.menu
