#buscador
	%div{ 'ng-controller' => 'InstantIngredientsSearchController' }
		%div.bar
			<!-- Create a binding between the searchString model and the text field -->
			%input{ :type => 'text', 'ng-model' => 'searchString', :class => 'searcher_bar', :placeholder => 'IngrediÃ©ntame...' }

			%table{ 'ng-show' => 'searchString.length >= 2', :class => 'resultIngTable' }
				%tr{ 'ng-repeat' => 'i in ingredients | searchFor:searchString', 'ng-click' => 'setValue(i)', :class => 'resultIng' }
					%td.resultIng {{i.name}}

		#ingSel
			%ul
				%li{ 'ng-repeat' => 'ing in selected_ingredients' } 
					%span{ 'ng-click' => 'removeIngredient($index)' } x
					{{ing.name}} 
					
