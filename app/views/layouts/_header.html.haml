%header
	/ %a{ :href => "#", :id => 'logo' }= 'Moffin'
	#logo
		= link_to image_tag( 'logo.png'), '/'
	#login
		#login_nav
			%ul
				%li 
					= link_to 'Registro', '/signup', class: 'btn_login'
				%li	
					%a{ :class => 'btn_login'}= 'Login'
		#login_form
			= form_for :users, :html => {:class => 'form_login'} do |f|
				= f.text_field :name, :class => 'login_text'
				= f.password_field :password, :class => 'login_text'
				= f.submit 'Login', :class => 'login_btn'


			%a{ :class => 'btn_close_login'}= 'x'


