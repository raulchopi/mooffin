				aasdfasdfasd asdf asdf asdf asdf asd fasd fasdf asdf asdf 

				
			#cuerporeceta.row
				#datos.large-4.columns
					#detallesreceta
						.dificultad
							Dificultad: #{@recipe.difficulty.description} 
						.tiempoElaboracion
							#{@recipe.time} minutos
						.autor
							Autor: 
							= link_to @recipe.user.name, user_path(@recipe.user)

					#ingredientesreceta
						%ul
							- @recipe.links.each do |link|
								%li
									= link.unidadSinCeros
									= link.unit.description
									= link.ingredient.name

				#elaboracionreceta.large-8.columns
					%ul
						- @recipe.steps.each do |step|
							%li= step.description

		#opiniones
			= render :partial => 'layouts/shared/new_opinion'

