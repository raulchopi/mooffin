#wrapper

	= render :partial => 'layouts/shared/header'

	#content.row
		#receta
			#cabecera.row
				#foto.large-12.columns
					= image_tag(@recipe.photo.url(:original))
			#cuerpo
				#autor.row
					= image_tag @recipe.user.avatar.url
					//= link_to @recipe.user.name, user_path(@recipe.user)

				#titulo.row
					#texto
						= @recipe.title.upcase
						//= render :partial => 'recipes/rating'

					//= pin_it_button(media: image_url(@recipe.photo_url), description: @recipe.title, url: @recipe.photo_url)

					#likeRecipe
						//= render :partial => 'recipes/like'

					- if @recipe.celiac_desease
						= image_tag('celiac_icon.png', :border => 0, size: '25', :alt => 'Receta no apta para celÃ­acos')

				#descripcion
					= @recipe.description

					
				#contenido.row
					#datos.large-4.columns
						#detalles
							.dificultad
								Dificultad: #{@recipe.difficulty.description} 
							.tiempoElaboracion
								#{@recipe.time} minutos
							.autor
								Autor: 
								= link_to @recipe.user.name, user_path(@recipe.user)

						#ingredientes
							%ul
								- @recipe.links.each do |link|
									%li
										= link.unidadSinCeros
										= link.unit.description
										= link.ingredient.name

					#elaboracion.large-8.columns
						%ul
							- @recipe.steps.each do |step|
								%li= step.description

		#opiniones
			= render :partial => 'layouts/shared/new_opinion'

			= render @opinions

			
	= render :partial => 'layouts/shared/footer'