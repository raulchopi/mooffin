%html
%body

= render :partial => 'layouts/shared/header'

#content
	#anhadirIng
		= form_for @link do |l|
			= l.text_field :number
			= l.collection_select :unit, Unit.all, :id, :desc
			= l.text_field :ingredient , :html => {'ng-model' => 'searchString', :class => 'searcher_bar', :placeholder => 'Ingrediente'}
			= l.text_field :importance
		
	#mainNuevaReceta
		#nuevaReceta
			= form_for @recipe, :html => {:id => 'form_recipe'} do |f|
				= f.label :title, "TÃ­tulo"
				= f.text_field :title
				= f.label :time, "Tiempo"
				= f.text_field :time
				= f.label :servings, "Comensales"
				= f.text_field :servings
				= f.label :difficulty, "Dificultad"
				= f.collection_select :difficulty, Difficulty.all, :id, :desc
				= f.submit 'Crear', :class => 'signup_btn'
		
= render :partial => 'layouts/shared/footer'