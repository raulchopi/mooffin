  gem "debugger", "~> 1.6.1"
  gem "database_cleaner", "~> 1.2.0"
  gem "cucumber-rails", "~> 1.4.0", require: false
  gem "capybara", "~> 2.1.0"
  gem "factory_girl", "~> 4.2.0"
  gem "rspec-rails", "~> 2.14.0"
  gem 'webrat'
end


gem "sass-rails", "~> 4.0.0"
gem "zurb-foundation", "~> 4.3.2"
gem "haml", "~> 4.0.3"
gem "coffee-rails", "~> 4.0.0"
